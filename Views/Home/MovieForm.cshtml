@using _6.Models
@{
    ViewData["Title"] = "The Joe Hilton Film Collection";
    
}

@model Movies

<!--Create a page with the form that dynamically adds category name-->
<h1>Add a Movie to the Collection</h1>

<form method="post">

    <input type="hidden" asp-for="MovieId"/>
    <label >Category</label>
    <br />
    <select>
        <option value="">Category</option>
        @foreach(Category c in ViewBag.Categories)
        {
            <option value="@c.CategoryId">@c.CategoryName</option>
        }
    </select>
    <br />
    <br />
    <label asp-for="Title">Title</label>
    <br />
    <input asp-for="Title"   />
    <br />
    <br />
    <label asp-for="Year">Year</label>
    <br />
    <input asp-for="Year"  />
    <br />
    <br />
    <label asp-for="Director">Director</label>
    <br />
    <input asp-for="Director" />
    <br />
    <br />
    <label asp-for="Rating">Rating</label>
    <br />
    <select asp-for="Rating">
        <option value="" disabled selected>Select an option</option>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
        <option value="Not Rated">NR</option>
    </select>
    <br />
    <br />
    <label asp-for="Edited" >Edited</label>
    <br />
    <select asp-for="Edited" >
        <option value="" disabled selected>Select an option</option>
        <option value=0>No</option>
        <option value=1>Yes</option>
    </select>
    <br />
    <br />
    <label asp-for="LentTo">Lent to:</label>
    <br />
    <input asp-for="LentTo" />
    <br />
    <br />
    <label asp-for="CopiedToPlex" >Copied to Plex:</label>
    <br />
    <select asp-for="CopiedToPlex">
        <option value="" disabled selected>Select an option</option>
        <option value=0>No</option>
        <option value=1>Yes</option>
    </select>
    <br />
    <br />
    <label asp-for="Notes">Notes</label>
    <br />
    <input asp-for="Notes"/>
    <br />
    <br />

    <button type="submit">Submit Movie</button>

    <div asp-validation-summary="All"></div>

</form>