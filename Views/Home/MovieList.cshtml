@{
}

@model List<Movies>


<!--Create a page to display all movies and allow edit and delete functions-->

<style>
    table {
      width: 100%;
      border-collapse: collapse;
    }

    th, td {
      padding: 8px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

   
   
    .button {
        display: inline-block;
        padding: 10px 20px;
        color: #fff;
        font-size: 16px;
        border: none;
        border-radius: 5px;
        
        
    }

    
    .red-button {
        background-color: #e74c3c;
    }

    
    .blue-button {
        background-color: #3498db;
    }


  </style>


<table>
    <thead class="fw-bold">
        <td>Category</td>
        <td>Year</td>
        <td>Director</td>
        <td>Rating</td>
        <td>Edited</td>
        <td>Title</td>
        <td>Lent to</td>
        <td>Copied to Plex</td>
        <td>Notes</td>
    </thead>

    @foreach (var x in Model){
        <tbody>
            <tr>
                
                <td>@x.Category?.CategoryName</td>
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Rating</td>
                <td>@x.Edited</td>
                <td>@x.Title</td>
                <td>@x.LentTo</td>
                <td>@x.CopiedToPlex</td>
                <td>@x.Notes</td>

                <td><a class="button blue-button" asp-controller="Home" asp-action="Edit" asp-route-id="@x.MovieId">Edit</a></td>
                <td><a class="button red-button" asp-controller="Home" asp-action="Delete" asp-route-id="@x.MovieId">Delete</a></td>
                
            </tr>
        </tbody>
    }
</table>